@model Ekartes.Models.Melos

@{
    ViewBag.Title = "Μέλος";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="border: 3px solid;border-color:gray; margin-left: 100px; margin-right: 100px; padding: 0px; border-radius: 1em; background-color: #303030">
    <h2 style="color:white; text-align:center;">@Html.DisplayFor(model => model.Epitheto) @Html.DisplayFor(model => model.Onoma)</h2>
</div>
<hr />
<div style="border: 2px solid; margin-left: 100px; margin-right: 100px; padding: 0px; border-radius: 1em; background-color: white;">
    <div style="background-color: lightgray; border-bottom: 2px solid; border-bottom-color: black; padding: 5px; border-top-right-radius: 1em; border-top-left-radius: 1em; ">
        <br />
        <br />
    </div>

    <div>
        <br />

        <div>
            @Html.DisplayFor(model => model.AT)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.AT)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.Onoma)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.Onoma)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.Epitheto)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.Epitheto)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.Sygeneia)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.Sygeneia)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.HmniaEkdosis)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.HmniaEkdosis)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.KwdikosKartas)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.KwdikosKartas)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.Dikaiouxos.AM)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.Dikaiouxos.AM)</b>
            </div>
        </div>

        <div>
            @Html.DisplayFor(model => model.Aitiologia)
            <div class="col-md-3" style="margin-left:190px; text-align:right;">
                <b>@Html.DisplayNameFor(model => model.Aitiologia)</b>
            </div>
        </div>

        <br />

        @if (Model.FilesMelos.Any(f => f.FileType == Ekartes.Models.FileType.Dikaiologitiko_Epanekdosis))
        {
            <div style="text-align:center">
                <b>Δικαιολόγητικό Επανέκδοσης</b>
            </div>
            <br />
            <div style="text-align:center">
                <iframe src="~/FileMelos?id=@Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.Dikaiologitiko_Epanekdosis).ID" style="height:500px; width:500px;"></iframe>
                <br />
                @Html.ActionLink("Δες το αρχείο σε νέα καρτέλα", "FilePreview", "Melos", new { id = @Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.Dikaiologitiko_Epanekdosis).ID }, htmlAttributes: new { target = "_blank" })
            </div>
        }

        <br />

        @if (Model.FilesMelos.Any(f => f.FileType == Ekartes.Models.FileType.FATayt_m))
        {
            <div style="text-align:center">
                <b>Φ/Α Ταυτότητας</b>
            </div>
            <br />
            <div style="text-align:center">
                <iframe src="~/FileMelos?id=@Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.FATayt_m).ID" style="height:500px; width:500px;"></iframe>
                <br />
                @Html.ActionLink("Δες το αρχείο σε νέα καρτέλα", "FilePreview", "Melos", new { id = @Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.FATayt_m).ID }, htmlAttributes: new { target = "_blank" })
            </div>
        }

        <br />

        @if (Model.FilesMelos.Any(f => f.FileType == Ekartes.Models.FileType.Photo_m))
        {
            <div style="text-align:center">
                <b>Φωτογραφία</b>
            </div>
            <br />
            <div style="text-align:center">
                <img class="img-thumbnail" src="~/FileMelos?id=@Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.Photo_m).ID" style="height:455.58px; width:603.98px;">
                <br />
                @Html.ActionLink("Δες το αρχείο σε νέα καρτέλα", "FilePreview", "Melos", new { id = @Model.FilesMelos.First(f => f.FileType == Ekartes.Models.FileType.Photo_m).ID }, htmlAttributes: new { target = "_blank" })
            </div>
            <br />
        }

    </div>
    <div style="background-color: lightgray; border-top: 2px solid; border-top-color: black; padding: 5px; border-bottom-right-radius: 1em; border-bottom-left-radius: 1em;">
        <br />
        <p>
            @Html.ActionLink("Πίσω", "AitimataEpanekdosiM")
        </p>
    </div>
</div>

