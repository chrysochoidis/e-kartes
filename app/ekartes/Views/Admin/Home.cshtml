@model IEnumerable<Ekartes.Models.Aitima>
@{
    ViewBag.Title = "E-Kartes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a style="float:right;margin-right:50px;">
    <img src="~/Images/logo.png" />
</a>

<br />                     

<div style="border: 3px solid; border-color: gray; margin-left: 100px; margin-right: 100px; padding: 0px; border-radius: 1em; background-color: #303030">
    <h2 class="col-md-offset-5" style="color:white">Αρχικό Μενού</h2>
</div>

<hr />

<div style="border: 2px solid; margin-left: 100px; margin-right: 100px; padding: 0px; border-radius: 1em; background-color: white;">
    <div style="background-color: lightgray; border-bottom: 2px solid; border-bottom-color: black; padding: 5px; border-top-right-radius: 1em; border-top-left-radius: 1em; ">
        <br />
        <br />
    </div>
    <br />
    <br />
    <br />
    <table style="margin-left:auto; margin-right:auto;">
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em" onclick="location.href='@Url.Action("Dikaiouxoi","Admin")'">Εγγεγραμένοι Δικαιούχοι</button>
                </div>
            </td>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em" onclick="location.href='@Url.Action("Meli","Admin")'">Προστατευόμενα Μέλη</button>
                </div>
            </td>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("Aitimata","Admin")'">Αιτήματα <p style="color:red"><b>( @Model.Count(m => m.Katastasi == Ekartes.Models.Katastasi.ekremmei) )</b></p>
                    </button>
                </div>
            </td>
        </tr>
    </table>
    <br />
    <br />
    <br />
    <div style="background-color: lightgray; border-top: 2px solid; border-top-color: black; padding: 5px; border-bottom-right-radius: 1em; border-bottom-left-radius: 1em;">
        <br />
        <br />
    </div>
</div>