@model IEnumerable<Ekartes.Models.Aitima>
@{
    ViewBag.Title = "Αιτήματα";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div style="border: 3px solid; border-color: gray; margin-left: 250px; margin-right: 250px; padding: 0px; border-radius: 1em; background-color: #303030">
    <h2 style="color:white;text-align:center;">Αιτήματα</h2>
</div>
<hr />
<div style="border: 2px solid; margin-left: 250px; margin-right:250px; padding: 0px;border-radius:1em;background-color:white">
    <div style="background-color: lightgray; border-bottom: 2px solid; border-bottom-color: black; padding: 5px; border-top-right-radius: 1em; border-top-left-radius: 1em; ">
        <br />
        <br />
    </div>
    <br />
    <br />
    <br />
    <table align="center">
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("AitimataCreateD","Admin")'">
                        Δημιουργίας Δικαιούχου <p style="color:red"><b>( @Model.Count(m => m.Eidos == Ekartes.Models.Eidos.create_d) )</b></p>
                    </button>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("AitimataEditD","Admin")'">
                        Επεξεργασίας Δικαιούχου <p style="color:red"><b>( @Model.Count(m => m.Eidos == Ekartes.Models.Eidos.edit_d) )</b></p>
                    </button>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("AitimataCreateM","Admin")'">
                        Δημιουργίας Κάρτας <p style="color:red"><b>( @Model.Count(m => m.Eidos == Ekartes.Models.Eidos.create_m) )</b></p>
                    </button>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("AitimataAnaneosiM","Admin")'">
                        Ανανέωσης Καρτών <p style="color:red"><b>( @Model.Count(m => m.Eidos == Ekartes.Models.Eidos.ananeosi_m) )</b></p>
                    </button>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <button class="btn btn-primary btn-lg" style="height:90px;width:300px;border:10px double;border-radius:2em"
                            onclick="location.href='@Url.Action("AitimataEpanekdosiM","Admin")'">
                        Επανέκδοσης Καρτών <p style="color:red"><b>( @Model.Count(m => m.Eidos == Ekartes.Models.Eidos.epanekdosi_m) )</b></p>
                    </button>
                </div>
            </td>
        </tr>

    </table>
    <br />
    <br />
    <br />
    <div style="background-color: lightgray; border-top: 2px solid; border-top-color: black; padding: 5px; border-bottom-right-radius: 1em; border-bottom-left-radius: 1em;">
        <br />
        @Html.ActionLink("Πίσω", "Home")
        <br />
    </div>
</div>