@model Ekartes.Models.Dikaiouxos

@{
    ViewBag.Title = "Επεξεργασία Στοιχείων";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("EditD", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div style="border: 3px solid; border-color: gray; margin-left: 150px; margin-right: 150px; padding: 0px; border-radius: 1em; background-color: #303030; ">
        <h2 style="color:white; text-align: center;">Επεξεργασία Στοιχείων</h2>
    </div>

    <hr />

    <div style="border: 2px solid; margin-left: 150px; margin-right: 150px; padding: 0px; border-radius: 1em;background-color:white; ">

        <div style="background-color: lightgray; border-bottom: 2px solid; border-bottom-color: black; padding: 5px; border-top-right-radius: 1em; border-top-left-radius: 1em; ">
            <br />
            <br />
        </div>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />

            <div class="form-group">
                @Html.LabelFor(model => model.KatastasiD, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.KatastasiD, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KatastasiD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AM, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Onoma, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Onoma, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Onoma, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Epitheto, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Epitheto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Epitheto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AT, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Monada, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Monada, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Monada, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Vathmos, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.Vathmos, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Vathmos, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.O_S, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.O_S, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.O_S, "", new { @class = "text-danger" })
                </div>
            </div>

            @if (Model.FilesDikaiouxos.Any(f => f.FileType == Ekartes.Models.FileType.Pistopoiitiko))
            {
                <div class="form-group">
                    <span class="control-label col-md-2"><strong>Τρέχων Πιστοποιητικό</strong></span>
                    <div class="col-md-8">
                        <iframe src="~/FileDikaiouxos?id=@Model.FilesDikaiouxos.First(f => f.FileType == Ekartes.Models.FileType.Pistopoiitiko).ID" style="height:500px; width:500px;"></iframe>
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.Label("Νέο Πιστοποιητικό", new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    <input type="file" id="Pistopoiitiko" name="upload" accept="application/pdf" />

                    <div id="demo" class="collapse" style="text-align:justify;color:red;">
                        Επιτρεπτός τύπος αρχείου: "PDF"
                    </div>

                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="collapse" data-target="#demo" style="margin-top:0px; margin-left:20px;">?</button>
                </div>

            </div>

            <br />

            @if (Model.FilesDikaiouxos.Any(f => f.FileType == Ekartes.Models.FileType.FATayt_d))
            {
                <div class="form-group">
                    <span class="control-label col-md-2"><strong>Τρέχων Φ/Α Ταυτότητας</strong></span>
                    <div class="col-md-8">
                        <iframe src="~/FileDikaiouxos?id=@Model.FilesDikaiouxos.First(f => f.FileType == Ekartes.Models.FileType.FATayt_d).ID" style="height:500px; width:500px;"></iframe>
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.Label("Νέο Φ/Α Ταυτότητας", new { @class = "control-label col-md-4" })
                <div class="col-md-5">
                    <input type="file" id="FATayt_d" name="upload2" accept="application/pdf" />

                    <div id="demo1" class="collapse" style="text-align:justify;color:red;">
                        Επιτρεπτός τύπος αρχείου: "PDF"
                    </div>

                </div>

                <div class="col-md-2">
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="collapse" data-target="#demo1" style="margin-top:0px; margin-left:20px;">?</button>
                </div>

            </div>

            <div class="form-group">
                <div style="text-align:center;">
                    <input type="submit" value="Αποθήκευση" class="btn btn-primary" />
                </div>
            </div>
        </div>

        <div style="background-color: lightgray; border-top: 2px solid; border-top-color: black; padding: 5px; border-bottom-right-radius: 1em; border-bottom-left-radius: 1em;">
            <br />
            <div>
                @Html.ActionLink("Πίσω", "Dikaiouxoi")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
