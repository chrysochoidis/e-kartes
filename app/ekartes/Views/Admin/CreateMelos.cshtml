@model Ekartes.Models.Melos

@{
    ViewBag.Title = "Προσθήκη Μέλους";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("CreateMelos", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div style="border: 3px solid;border-color:gray; margin-left: 250px; margin-right: 250px; padding: 0px; border-radius: 1em; background-color: #303030">
        <h2 style="color:white; text-align:center;">Προσθήκη Μέλους</h2>
    </div>
    <hr />
    <div style="border: 2px solid; margin-left: 250px; margin-right: 250px; padding: 0px;border-radius:1em;background-color:white;">
        <div style="background-color: lightgray; border-bottom: 2px solid; border-bottom-color: black; padding: 5px; border-top-right-radius: 1em; border-top-left-radius: 1em;">
            <br />
            <br />
        </div>
        <div class="form-horizontal">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.AT, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Onoma, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Onoma, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Onoma, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Epitheto, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Epitheto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Epitheto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sygeneia, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.Sygeneia, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sygeneia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Aitiologia, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EnumDropDownListFor(model => model.Aitiologia, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Aitiologia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Φωτοαντίγραφο ταυτότητας", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <input type="file" id="FATayt_m" name="upload" accept="application/pdf" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Φωτογραφία Μέλους", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <input type="file" id="Photo_m" name="upload2" accept="image/*" />
                </div>
            </div>

            <div class="form-group">
                <div style="text-align:center;">
                    <input type="submit" value="Προσθήκη" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div style="background-color: lightgray; border-top: 2px solid; border-top-color: black; padding: 5px; border-bottom-right-radius: 1em; border-bottom-left-radius: 1em;">
            <br />
            <div>
                @Html.ActionLink("Πίσω", "Meli")
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


